<%- include('layout', { 
  body: '<article class="diary-post">' +
    '<header class="post-header">' +
      '<h1 class="post-title">' + post.title + '</h1>' +
      '<div class="post-meta">' +
        '<time class="post-time" datetime="' + moment(post.date).format() + '">' +
          moment(post.date).format(config.date_format + ' ' + config.time_format) +
        '</time>' +
        
        (post.tags && post.tags.length ? 
          '<div class="post-tags">' +
            post.tags.map(function(tag) {
              return '<span class="post-tag">#' + tag + '</span>';
            }).join('') +
          '</div>' : '') +
      '</div>' +
    '</header>' +
    
    '<div class="post-content">' +
      post.content +
    '</div>' +
    
    '<footer class="post-footer">' +
      '<div class="post-nav">' +
        '<a class="post-nav-item post-nav-prev" href="javascript:history.back()">← 返回</a>' +
        '<a class="post-nav-item post-nav-home" href="/">首页</a>' +
      '</div>' +
    '</footer>' +
  '</article>'
}) %> 