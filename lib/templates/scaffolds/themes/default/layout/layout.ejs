<!DOCTYPE html>
<html lang="<%= config.language || 'zh-CN' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= page.title %> | <%= config.title %></title>
  <!-- Inter字体 -->
  <link rel="stylesheet" href="https://cdn.bootcdn.net/ajax/libs/inter-ui/3.19.3/inter.min.css">
  <!-- Normalize.css -->
  <link rel="stylesheet" href="https://cdn.bootcdn.net/ajax/libs/normalize/8.0.1/normalize.min.css">
  <!-- Highlight.js -->
  <link rel="stylesheet" href="https://cdn.bootcdn.net/ajax/libs/highlight.js/11.8.0/styles/github.min.css">
  <script src="https://cdn.bootcdn.net/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>
  <!-- 本地样式 -->
  <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="header-inner">
        <h1 class="site-title"><a href="/"><%= config.title %></a></h1>
        <p class="site-subtitle"><%= config.subtitle %></p>
        
        <nav class="menu">
          <% for (const [label, url] of Object.entries((config.theme_config && config.theme_config.menu) || {})) { %>
            <a class="menu-item" href="<%= url %>"><%= label %></a>
          <% } %>
        </nav>
      </div>
    </header>

    <% if (config.debug === true && typeof _testPostsHtml !== 'undefined' && _testPostsHtml) { %>
      <%- _testPostsHtml %>
    <% } %>

    <main class="main">
      <%- body %>
    </main>

    <footer class="footer">
      <div class="footer-inner">
        <p>&copy; <%= new Date().getFullYear() %> <%= config.author %></p>
        <p>Powered by <a href="https://github.com/wzwzx/diary-cli" target="_blank">Diary</a></p>
      </div>
    </footer>
  </div>

  <!-- 初始化代码高亮 -->
  <script>
    document.addEventListener('DOMContentLoaded', (event) => {
      document.querySelectorAll('pre code').forEach((block) => {
        hljs.highlightBlock(block);
      });
    });
  </script>
</body>
</html> 